@{
    ViewData["Title"] = "Login";
    Layout = null;
    string? msg = ViewBag.message;
}
@{
    string username = null;
    username = @Context.Session.GetString("username");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shopping</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shopping.styles.css" asp-append-version="true" />
    <script src="~/js/login.js"></Script>
</head>
<body class="login_body"> 

     <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
                @* if user already login, page will show "hello, username"
                if user havn't login, page will show website name.*@
                @if (username != null)
                {
                    <span><b>Hello, @username</b></span>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Browser" asp-action="Index"> Shopping</a>
                }

           @* <a class="navbar-brand" asp-area="" asp-controller="Broswer" asp-action="Index">Shopping</a>*@
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                            <div class="nav-link text-dark"></div>
                    </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Browser" asp-action="Index">Home Page</a>
                        </li>
                    <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Browser" asp-action="Purchase">My Purchase</a>
                    </li>
                        @* if user already login, page will show 'logout''
                        if user havn't login, page will show 'login''.*@
                        @if (username != null)
                        {
                            <li class="nav-item">
                                @*reference jquery from site.js *@
                                <a class="nav-link text-dark" hidden id="reallogout" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                                <a class="nav-link text-dark" id="logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" id="login" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                            </li>
                        }

    <div >
        <main role="main" class="">
            <div>
                <form action="/Login/Login" method="post"  class="login mt-2">
                    <div class="">
                        <label for="email"><b>Username:</b></label>
                        <input type="text" class="login_input" id="usernameId" placeholder="Enter username" name="username">
                        <td><span id="checkUsername" style="color: red"></span></td>
                       @if(!string.IsNullOrEmpty(msg)){
                            <td><span id="msg" style="color: red">@msg</span></td>
                        }                       
                    </div>
                    <div class="mb-3">
                        <label for="pwd"><b>Password:</b></label>
                        <input type="password" class="login_input" id="passwordId" placeholder="Enter password" name="password">
                        <td><span id="checkPassword" style="color: red"></span></td>
                    </div>                  
                    <input type="submit" class="btn_login" value="Login">
                </form>
            </div>
        </main>
    </div>

    </header>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/login.js"></script>


</body>






</html>






