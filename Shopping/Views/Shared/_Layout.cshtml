


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shopping</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
          type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Shopping.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    
</head>
@{
    string username = null;
    username = @Context.Session.GetString("username");
}
<body>
    <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
                @* if user already login, page will show "hello, username"
                if user havn't login, page will show website name.*@
                @if (username != null)
                {
                    <span><b>Hello, @username</b></span>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Browser" asp-action="Index"> Shopping</a>
                }

           @* <a class="navbar-brand" asp-area="" asp-controller="Broswer" asp-action="Index">Shopping</a>*@
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                            <div class="nav-link text-dark"></div>
                    </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Browser" asp-action="Index">Home Page</a>
                        </li>
                    <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Browser" asp-action="Purchase">My Purchase</a>
                    </li>
                    @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Logout</a>
                    </li>*@
                        @* if user already login, page will show 'logout''
                        if user havn't login, page will show 'login''.*@
                        @if (username != null)
                        {
                            <li class="nav-item">
                                @*reference jquery from site.js *@
                                <a class="nav-link text-dark" hidden id="reallogout" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                                <a class="nav-link text-dark" id="logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" id="login" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                            </li>
                        }
                        <li class="nav-item">
                           <div class="search-container">
                            <form action=@Url.Action("Search","Broswer")>
                                <input type="text" placeholder="Search" name="query">
                                <button type="submit">Search</button>
                            </form>
                        </div>
                    </li>
                    
                    
                    
                </ul>

                  
                    <div class="nav-item">
                        <a href="/Cart/ViewCart" class="nav-link bi bi-cart"><i class="fa fa-shopping-cart"></i> Cart</a>
                    </div>

                    <span id="dom" class="badge badge bg-dark"> 0 </span>
                

                   


                </div>
        </div>
    </nav>

</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



